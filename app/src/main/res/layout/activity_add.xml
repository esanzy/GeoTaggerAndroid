                    android:id="@+id/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#efefef"
                    android:ems="10"
                    android:inputType="textMultiLine" />

